@model IEnumerable<CinemaTicketSystem.Models.Reservation>

@{
    ViewData["Title"] = "My Reservations";
    var userName = Context.Session.GetString("UserName");
}

<div class="container mt-5">
    <div class="mb-4">
        <h1>üìÖ My Reservations</h1>
        <p class="text-muted">Viewing reservations for: <strong>@userName</strong></p>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            ‚úì @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            ‚úó @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Film</th>
                        <th>Cinema</th>
                        <th>Date & Time</th>
                        <th>Seat</th>
                        <th>Reserved On</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reservation in Model.OrderByDescending(r => r.ReservationTime))
                    {
                        <tr>
                            <td><strong>@reservation.Screening.FilmTitle</strong></td>
                            <td>@reservation.Screening.Cinema.Name</td>
                            <td>@reservation.Screening.ScreeningDateTime.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <span class="badge bg-info">Row @reservation.Row, Seat @reservation.SeatNumber</span>
                            </td>
                            <td>@reservation.ReservationTime.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <a href="@Url.Action("Delete", new { id = reservation.ReservationId })" class="btn btn-sm btn-danger">‚ùå Cancel</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <h5>No reservations yet.</h5>
            <p>You don't have any reservations. <a href="@Url.Action("Index", "Screenings")">Browse screenings</a> to make your first reservation!</p>
        </div>
    }

    <div class="mt-3">
        <a href="@Url.Action("Index", "Screenings")" class="btn btn-primary">üé¨ Browse Screenings</a>
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">üè† Back to Home</a>
    </div>
</div>
